{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:prettier/recommended", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "eslint-plugin-import-helpers",
    "prefer-arrow",
    "import"
  ],
  "settings": {
    "import/extensions": [".js"],
    "import/resolver": {
      "node": {
        "alwaysTryTypes": true
      },
      "babel-module": {}
    }
  },
  "rules": {
    "import/no-unresolved": "off",
    "no-console": "off",
    "import/extensions": "off",
    "prettier/prettier": "error"
  }
}
